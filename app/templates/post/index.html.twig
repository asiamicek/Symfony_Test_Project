{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_post_index'|trans }}
{% endblock %}

{% block body %}

    <h1>{{ 'title_post_index'|trans }}</h1>
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    <a href="{{ url('post_create') }}">
        <button  onclick="" style="margin-top: 20px; width: 20%; margin-bottom:20px;" class="btn btn-primary">
            {{ 'post_create'|trans }}
        </button>
    </a>
    {% endif %}

    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'post.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_created_at'|trans, 'post.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_updated_at'|trans, 'post.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_title'|trans, 'post.title') }}</th>
                <th>{{ 'label_category'|trans }}</th>
                <th>{{ 'label_tags'|trans }}</th>
                <th>{{ 'label_author'|trans }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for post in pagination.items %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.createdAt|format_date('short') }}</td>
                    <td>{{ post.updatedAt|format_date('short') }}</td>
                    <td>{{ post.title }}</td>
                    <td><a href="{{ url('post_index', {'filters.category_id' : post.category.id}) }}" title="{{ post.category.title }}">
                            {{ post.category.title }}
                        </a></td>
                    <td>
                        {% if post.tags is defined and post.tags|length %}
                            {% for tag in post.tags %}
                                <a href="{{ url('post_index', {'filters.tags_id' : tag.id}) }}" title="{{ tag.title }}">
                                    {{ tag.title }}
                                </a>
                            {% endfor %}
                        {% else %}
                            &nbsp;
                        {% endif %}
                    </td>
                    <td>{{ post.author.nickname }}</td>
                    <td>
                        <a href="{{ url('post_show', {id: post.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ 'action.show'|trans }}
                        </a>
                        {% if is_granted('EDIT', post) %}
                        <a href="{{ url('post_edit', {id: post.id}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'action.edit'|trans }}
                        </a>
                        {% endif %}

                        {% if is_granted('DELETE', post) %}
                        <a href="{{ url('post_delete', {id: post.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {% include 'default/_single_alert_message.html.twig' with {
                type: 'warning',
                message: 'message_empty_list'|trans
            } %}
        </p>
    {% endif %}
{% endblock %}