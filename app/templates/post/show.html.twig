{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.post_details'|trans({'%id%': post.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.post_details'|trans({'%id%': post.id|default('')}) }}</h1>
    {% if post is defined and post|length %}



        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ post.id }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ post.createdAt|date('Y/m/d') }}</dd>
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ post.updatedAt|date('Y/m/d') }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  post.title }}</dd>
            <dt>{{ 'label.content'|trans }}</dt>
            <dd>{{  post.content }}</dd>
        </dl>


        {% if post.comments is defined and post.comments|length %}
            <h3>Komentarze</h3>
            <table>
                {% for comment in post.comments %}
{#                    {% if comment.status %}#}
                        <tr>
                            <td>{{ comment.id }}</td>
                            <td>{{ comment.content }}</td>
                            <td>{{ comment.createdAt|date('d-m-Y') }}</td>
                            <td><a href="{{ url('comment_delete', {id: comment.id}) }}" title="{{ 'action.delete'|trans }}">
                                    {{ 'action.delete'|trans }}
                                </a></td>
                        </tr>
{#                    {% endif %}#}
                {% endfor %}
            </table>
        {% endif %}

        <h3>Dodaj komentarz</h3>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="form-group row float-sm-right">
            <input id="wyslij" type="submit" value="WyÅ›lij" class="btn btn-primary"/>
        </div>
        {{ form_end(form) }}

        <p>
            <a href="{{ url('post_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}