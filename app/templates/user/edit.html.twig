{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_edit'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') or app.user %}
        {% include 'default/_form.html.twig' with {
            page_title: 'user_edit'|trans,
            page_title_param: {'%id%': user.id},
            attr: {
                method: 'PUT',
                action: url('user_edit', {'id': user.id}),
            },
            form: form,
            submit_label: 'action.save'|trans,
            message: 'message_updated_successfully'|trans,
            back_to_list_path: 'index',
        } %}
    {% else %}
        {% include 'default/_form.html.twig' with {
            page_title: 'user_edit',
            page_title_param: {'%id%': user.id},
            attr: {
                method: 'PUT',
                action: url('user_edit', {'id': user.id}),
            },
            form: form,
            submit_label: 'action.save'|trans,
            message: 'message_updated_successfully'|trans,
            back_to_list_path: 'index',
        } %}
    {% endif %}
{% endblock %}