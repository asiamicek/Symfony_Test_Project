{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_details'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}

    <h1>{{ 'user_details'|trans({'%id%': user.id|default('')}) }}</h1>
    {% if user is defined and user|length %}
        <dl>
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ user.id }}</dd>
            <dt>{{ 'label_nickname'|trans }}</dt>
            <dd>{{ user.nickname }}</dd>
            <dt>{{ 'label_email'|trans }}</dt>
            <dd>{{ user.email }}</dd>
            {#            <dt>{{ 'label_password'|trans }}</dt>#}
            {#            <dd>{{ user.password }}</dd>#}
        </dl>
        <p>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ url('user_index') }}" title="back to the list">
                    {{ 'action_close'|trans }}
                </a>
            {% endif %}
            <a href="{{ url('user_edit', {id: user.id}) }}" title="{{ 'action.edit_data'|trans }}" id="op">
                {{ 'action.edit_data'|trans }}
            </a>
            <a href="{{ url('user_edit_password', {id: user.id}) }}" title="{{ 'action.edit_password'|trans }}" id="op">
                {{ 'action.edit_password'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}